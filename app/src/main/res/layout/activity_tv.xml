<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/ll_root"
    android:layout_height="match_parent"
    android:paddingTop="20dp">

    <TextView
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        android:tag="focus_scale"
        android:background="@color/color_red"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:focusable="true"
        android:layout_marginStart="220dp"
        android:layout_marginTop="40dp"
        android:tag="focus_no_scale"
        android:focusableInTouchMode="true"
        android:background="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:focusable="true"
        android:layout_marginTop="40dp"
        android:tag="focus_ignore"
        android:layout_marginStart="400dp"
        android:focusableInTouchMode="true"
        android:background="@color/color_keyword_green"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:focusable="true"
        android:layout_marginTop="40dp"
        android:layout_marginStart="580dp"
        android:focusableInTouchMode="true"
        android:background="@color/color_light_orange"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="160dp"
        android:text="hello"
        android:gravity="center"
        android:layout_marginStart="40dp"
        android:background="@drawable/selector_focus_common_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="160dp"
        android:text="world"
        android:gravity="center"
        android:layout_marginStart="220dp"
        android:background="@drawable/selector_focus_common_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>